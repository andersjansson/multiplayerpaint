<div class="navbar navbar-default navbar-fixed-bottom" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <p>
                  <div id="brushSizeSlider">
                      <input type="text" class="slider" id="brushSize" />
                  </div> 
              </p>
            </li>
            <li>
                <p>
                  <div id="colorPicker">
                      <input class="color {pickerFaceColor:'transparent',pickerFace:3,pickerBorder:0,pickerInsetColor:'black'}" id="cp">
                  </div>
                </p>    
            </li>
            <li id="brush" class="tool-icon hover-tooltip" title="Hotkey: (B)">
              <i class="fa fa-paint-brush"></i>
            </li>
             <li id="eyedropper" class="tool-icon hover-tooltip" title="Hotkey: (I)">
              <i class="fa fa-eyedropper"></i>
            </li>
            <li id="eraser" class="tool-icon hover-tooltip" title="Hotkey: (E)">
              <i class="fa fa-eraser"></i>
            </li>
          </ul>
            <ul class="nav navbar-nav navbar-right">
              <li id="trash" class="tool-icon hover-tooltip" title="Clear canvas"><i class="fa fa-trash"></i></li>
              <li id="saveImage" class="tool-icon hover-tooltip" title="Save image"><i class="fa fa-floppy-o"></i></li>
            </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <% if(typeof password !== "undefined") { %>
      <script>
        var canvas = document.getElementById('canvas');
        var context = canvas.getContext('2d');
        var imageObj = new Image();

        imageObj.onload = function() {
          context.drawImage(imageObj, 0, 0);
        };
        
        imageObj.src = "<%= dataURL %>";
      </script>
    <% } %>
  </body>
</html>
